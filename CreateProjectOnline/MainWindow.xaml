<Window x:Class="CreateProjectOnline.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreateProjectOnline"
        mc:Ignorable="d"
        Title="Plastic Project Creation" 
        Height="384" 
        Width="626"
        ResizeMode="NoResize">
    <Grid HorizontalAlignment="Center" Width="626" Height="374" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="CreateButton" Content="Create" HorizontalAlignment="Center" Margin="0,233,0,0" VerticalAlignment="Top" Width="198" Click="CreateProject" Grid.Column="1" RenderTransformOrigin="0.505,0.152" IsEnabled="False"/>
        <Label Content="Plastic Organization" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="131,60,0,0" VerticalAlignment="Top" Height="31" FontWeight="Bold"/>
        <ComboBox x:Name="SelectOrganizationDd" Grid.ColumnSpan="2" HorizontalAlignment="Left"  Margin="267,60,0,0" VerticalAlignment="Top" Width="168" SelectionChanged="ComboBox_OrganizationSelection">
            <ComboBoxItem x:Name="SelectOrganizationDdItem" Content=""/>
        </ComboBox>
        <Label Content="New Project Name" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="131,135,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="269,139,0,0" VerticalAlignment="Top" Width="120" TextChanged="ProjectNameChanged"/>
        <Label Content="Project Location" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="132,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="ProjectLocationTxt" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="270,0,0,0" VerticalAlignment="Center" Width="120" IsEnabled="False" IsTabStop="False" Text="" TextChanged="ProjectLocationTxt_TextChanged"/>
        <Button Content="Browse" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="420,175,0,0" VerticalAlignment="Top" Width="67" Click="BrowseButton_Click"/>
        <ProgressBar x:Name="OperationProgressBar" Grid.ColumnSpan="2" Margin="139,296,125,0" Foreground="Green" Visibility="Collapsed" IsIndeterminate="False" Minimum="0" Maximum="100" Value="0" Height="20" VerticalAlignment="Top"/>
        <Label x:Name="ProgressBarComment" Content="" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="138,316,0,0" Visibility="Collapsed" VerticalAlignment="Top" FontSize="10"/>
        <Label x:Name="ProgressBarComment2" Content="" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="139,268,0,0" Visibility="Collapsed" VerticalAlignment="Top" FontSize="10"/>
        <Label x:Name="PlasticVersion" Content="Content" HorizontalAlignment="Center" Visibility="Visible" VerticalAlignment="Top" FontSize="10" Grid.Column="1"/>
        <Label x:Name="ProjectNameValidate" Content="" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="394,135,0,0" VerticalAlignment="Top" Foreground="Red"/>
        <ComboBox x:Name="SelectVersionDd" Grid.ColumnSpan="2" HorizontalAlignment="Left"  Margin="269,99,0,0" VerticalAlignment="Top" Width="168" SelectionChanged="ComboBox_SelectionVersion">
            <ComboBoxItem Content="Unity 2022"/>
            <ComboBoxItem Content="Unity 06"/>
        </ComboBox>
        <Label Content="Unity Version" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="131,97,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="DebugMode" Content="Debug Mode" HorizontalAlignment="Left" Visibility="Collapsed" VerticalAlignment="Top" FontSize="10" Foreground="Red" Grid.Column="1" Margin="548,323,0,0" Width="69"/>
    </Grid>
</Window>