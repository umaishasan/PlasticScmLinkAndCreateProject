<Window x:Class="CreateProjectOnline.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreateProjectOnline"
        mc:Ignorable="d"
        Title="MainWindow" Height="373" Width="626">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Create" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="189,245,0,0" VerticalAlignment="Top" Width="199" Click="CreateProject"/>
        <Label Content="Plastic Organization" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="123,77,0,0" VerticalAlignment="Top" Height="31"/>
        <ComboBox x:Name="SelectOrganizationDd" Grid.ColumnSpan="2" HorizontalAlignment="Left"  Margin="268,79,0,0" VerticalAlignment="Top" Width="168" SelectionChanged="ComboBox_SelectionChanged" IsEditable="True">
            <ComboBoxItem Content="LocLab_Consulting_GmbH"/>
            <ComboBoxItem Content="thelocationlabdeveloper"/>
        </ComboBox>
        <Label Content="Project Name" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="123,131,0,0" VerticalAlignment="Top"/>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="268,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="ProjectNameChanged"/>
        <Label Content="Project Location" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="123,179,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ProjectLocationTxt" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="268,183,0,0" VerticalAlignment="Top" Width="120" IsEnabled="False" IsTabStop="False" Text=""/>
        <Button Content="Browse" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="416,181,0,0" VerticalAlignment="Top" Width="67" Click="Button_Click"/>

    </Grid>
</Window>
